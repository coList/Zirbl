<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="oval">

            <solid android:color="#d8d8d8" />
            <corners android:radius="7dp" />
            <gradient android:type="radial" android:gradientRadius="150"
                android:startColor="@color/colorAccent" android:endColor="@color/colorTransparent" />

            <size
                android:height="37dp"
                android:width="37dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3px" android:top="3px" android:left="3px" android:right="3px">

        <shape  android:shape="oval">

            <solid android:color="#FFFFFF" />
            <corners android:radius="7dp" />



        </shape>

    </item>


</layer-list>
