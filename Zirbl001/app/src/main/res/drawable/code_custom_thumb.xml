<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>

        <shape
            android:shape="oval">

            <corners
                android:radius="7dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="150"
                android:startColor="@color/colorAccent"
                android:endColor="@color/colorTransparent30" />
            <size
                android:height="35dp"
                android:width="35dp" />

        </shape>

    </item>

    <!-- White Top color -->
    <item
        android:bottom="2px"
        android:top="2px"
        android:left="2px"
        android:right="2px">

        <shape
            android:shape="oval">

            <solid
                android:color="#FFFFFF" />
            <corners
                android:radius="7dp" />

        </shape>

    </item>


</layer-list>
