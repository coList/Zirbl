<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners
                android:radius="5dp" />
            <gradient
                android:angle="270"
                android:startColor="@color/colorTransparent30"
                android:endColor="@color/colorTransparent30"
                android:centerY="0.2"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:id="@android:id/background"
        android:bottom="2px"
        android:top="2px"
        android:left="2px"
        android:right="2px">
        <shape android:shape="rectangle">
            <corners
                android:radius="5dp" />
            <gradient
                android:angle="270"
                android:startColor="@color/colorAccent"
                android:endColor="@color/colorAccent"
                android:centerY="0.2"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:id="@android:id/progress" >
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <gradient
                    android:endColor="#2BC5D7"
                    android:startColor="#00FFA2"
                    android:centerColor="#15E3BB" />
            </shape>
        </clip>
    </item>
</layer-list>