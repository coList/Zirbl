<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hsaugsburg.zirbl001.TourActivities.ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- top actionbar -->
        <RelativeLayout
            android:id="@+id/relLayoutActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_top_dark_actionbar" />

        </RelativeLayout>

        <!-- Middle section (body) -->
        <LinearLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relLayoutActionBar"
            android:background="@color/colorAccent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/AnswerArea"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/pointsImage"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:adjustViewBounds="true"
                                android:paddingBottom="26dp"
                                android:paddingTop="24dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/img_right"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:id="@+id/points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="170dp"
                                android:textColor="@color/colorBrown"
                                android:textSize="50sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
                            android:id="@+id/resultTeam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:text="Team:" />

                        <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
                            android:id="@+id/resultMembers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:text="Teilnehmer:" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/performanceTime"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_time" />

                            <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryView
                                android:id="@+id/performanceTeamname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:text="1h 40min" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="24dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ranking"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_cup" />

                            <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryView
                                android:id="@+id/rankingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:text="4.Platz von 32" />
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/continueAreaScroll"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/continueButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="70dp"
                            android:layout_marginTop="5dp"
                            android:adjustViewBounds="true"
                            android:background="@android:color/transparent"
                            android:onClick="endTour"
                            android:scaleType="fitCenter"
                            android:src="@drawable/btn_continue" />
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
