<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hsaugsburg.zirbl001.TourActivities.NavigationActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/testbuttonCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="#Kartensimulation# ...in der Tour weiter --> Hier klicken!" />

    <Button
        android:id="@+id/layoutLetters"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="layoutLetters"
        android:text="#Buchstaben#Layout"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/layoutSlider"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="layoutSlider"
        android:text="#SchÃ¤tzen#Layout"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/layoutTrueFalse"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="layoutTrueFalse"
        android:text="#Wahr/Gelogen#Layout"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/layoutQuiz"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="layoutQuiz"
        android:text="#Quiz#Layout"
        android:textAllCaps="false" />
</LinearLayout>
