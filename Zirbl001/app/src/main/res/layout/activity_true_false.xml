<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hsaugsburg.zirbl001.TourActivities.TrueFalseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- top actionbar -->
        <RelativeLayout
            android:id="@+id/relLayoutActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_top_dark_actionbar" />

        </RelativeLayout>

        <!-- Middle section (body) -->
        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relLayoutActionBar"
            android:background="@color/colorAccent">


            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <LinearLayout
                    android:id="@+id/questionArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/questionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:text="#"
                        android:textAlignment="viewStart"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/qestionImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/behindQuestionImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            app:srcCompat="@color/colorTourIcons" />

                        <TextView
                            android:id="@+id/besideImgQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/behindQuestionImage"
                            android:background="@drawable/code_pressed_route"
                            android:gravity="bottom"
                            android:paddingBottom="24dp"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:paddingTop="24dp"
                            android:text="#"
                            android:textColor="@color/colorAccent" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/lineQ"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:srcCompat="@color/colorPressed" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/answerArea"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <RelativeLayout
                        android:id="@+id/truthArea"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/truth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/code_pressed_truth"
                            android:gravity="bottom|center_horizontal"
                            android:paddingBottom="24dp"
                            android:text="wahr"
                            android:textAlignment="gravity"
                            android:textAllCaps="false"
                            android:textColor="@color/common_google_signin_btn_text_light_default" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        app:srcCompat="@color/colorPressed" />

                    <RelativeLayout
                        android:id="@+id/lieArea"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/lie"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/code_pressed_lie"
                            android:gravity="bottom|center_horizontal"
                            android:paddingBottom="24dp"
                            android:text="gelogen"
                            android:textAlignment="gravity"
                            android:textAllCaps="false"
                            android:textColor="@color/common_google_signin_btn_text_light_default" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/continueArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_vertical">

                    <ImageView
                        android:id="@+id/lineC"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        app:srcCompat="@color/colorPressed" />

                    <ImageButton
                        android:id="@+id/continueButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:onClick="continueToNextView"
                        android:scaleType="fitCenter"
                        android:src="@drawable/button_continue" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
