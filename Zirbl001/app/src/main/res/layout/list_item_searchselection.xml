<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_selection_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:id="@+id/titleArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <hsaugsburg.zirbl001.Fonts.OpenSansBoldAccentView
            android:id="@+id/tourTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/descriptionShort"
            android:textAllCaps="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/descriptionArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleArea"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">


        <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
            android:id="@+id/descriptionShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iconArea" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iconArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionArea"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_time" />

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldTurquoiseView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:textAlignment="textEnd" />

        <ImageView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_route" />

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldTurquoiseView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:textAlignment="textEnd" />

        <ImageView
            android:id="@+id/difficulty"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_level" />

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldTurquoiseView
            android:id="@+id/difficultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:textAlignment="textEnd" />

    </LinearLayout>


</RelativeLayout>