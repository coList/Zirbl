<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tour_selection_element"
    android:layout_width="match_parent"
    android:layout_height="187dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent" />

    <hsaugsburg.zirbl001.Fonts.OpenSansBoldAccentView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/descriptionShort"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark" />

    <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
        android:id="@+id/descriptionShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iconArea"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="#" />

    <LinearLayout
        android:id="@+id/iconArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transparent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_time" />

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldTurquoiseView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="24dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_route" />

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldTurquoiseView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="24dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/difficulty"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_level" />

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldTurquoiseView
            android:id="@+id/difficultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="24dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        app:srcCompat="@color/colorTransparentLight" />
</RelativeLayout>