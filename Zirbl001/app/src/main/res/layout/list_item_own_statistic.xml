<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relLayoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/membersOfTeam"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_zirblnut_golden" />

        <hsaugsburg.zirbl001.Fonts.OpenSansBoldPoints
            android:id="@+id/statPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imagePoints"
            android:layout_alignStart="@+id/imagePoints"
            android:layout_centerVertical="true"
            android:paddingTop="16dp"
            android:text="000"
            android:textAlignment="center"
            app:textAllCaps="false" />

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryView
            android:id="@+id/titleOfStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="Zoo"
            app:textAllCaps="false" />

        <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleOfStatistic"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:text="25. September 2017"
            app:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/usedTimeArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageUsedTime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_time" />

            <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryView
                android:id="@+id/textUsedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="1h 40min"
                app:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/placementOfAllArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usedTimeArea"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePlacement"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_cup" />

            <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryView
                android:id="@+id/textPlacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="4. Platz von 255"
                app:textAllCaps="false" />
        </LinearLayout>

        <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryView
            android:id="@+id/teamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placementOfAllArea"
            android:layout_marginLeft="24dp"
            android:text="Die Namenlosen:"
            app:textAllCaps="false" />

        <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
            android:id="@+id/membersOfTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teamName"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:text="Meli, Tobi, Coco, Vreni, Lari, Simon, Tim, Dini, Moe, Melis"
            app:textAllCaps="false" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/lineBelow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/teamName"
        app:srcCompat="@color/colorLine" />

</LinearLayout>