<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="hsaugsburg.zirbl001.TourActivities.QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relLayoutProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_progressbar" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollLayoutSite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
                    android:id="@+id/questionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/lineAbove"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:contentDescription="@string/app_name"
                    android:visibility="visible"
                    app:srcCompat="@color/colorLine" />

                <RelativeLayout
                    android:id="@+id/questionImage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/behindQuestionImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                    <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
                        android:id="@+id/besideImgQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/behindQuestionImage"
                        android:background="@color/colorTransparent80"
                        android:gravity="bottom"
                        android:paddingBottom="24dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="24dp"
                        android:textColor="@color/colorAccent" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/area1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minHeight="58dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgLetter1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="24dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_1_normal" />

                        <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryButton
                            android:id="@+id/answer1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:text="hsnh hsnj jahj hsnh hsnj jahj hsnh hsnj jahj hdnj"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/area2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minHeight="58dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgLetter2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="24dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_2_normal" />

                        <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryButton
                            android:id="@+id/answer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:text="hsnh hsnj jahj hsnh hsnj jahj hsnh hsnj jahj hdnjhsnh hsnj jahj hsnh hsnj jahj hsnh hsnj jahj hdnj"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/area3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minHeight="58dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgLetter3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="24dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_3_normal" />

                        <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryButton
                            android:id="@+id/answer3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:text="hsnh hsnj jahj hsnh hsnj jahj hsnh hsnj jahj hdnj"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@color/colorLine" />

                    <LinearLayout
                        android:id="@+id/area4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minHeight="58dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgLetter4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="24dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_4_normal" />

                        <hsaugsburg.zirbl001.Fonts.QuicksandBoldPrimaryButton
                            android:id="@+id/answer4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:text="hsnh hsnj jahj hsnh hsnj jahj hsnh hsnj jahj hdnj"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@color/colorLine" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/continueArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="16dp"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/continueButton"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/app_name"
                        android:onClick="continueToNextView"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/btn_continue" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relLayoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_top_dark_actionbar" />

    </RelativeLayout>

</FrameLayout>
