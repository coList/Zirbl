<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hsaugsburg.zirbl001.NavigationActivities.TourDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Middle section (body) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relLayout1"
            android:layout_above="@+id/relLayoutBottomNav">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/position"
                            app:srcCompat="@drawable/pressed_route"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image"
                            app:srcCompat="@drawable/zoo"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iconBar"
                            app:srcCompat="@drawable/pressed_route"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <ImageButton
                            android:id="@+id/go"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_alignBottom="@+id/position"
                            android:layout_alignRight="@+id/position"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="16dp"
                            android:background="@android:color/transparent"
                            android:onClick="startTour"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/go_button" />

                        <LinearLayout
                            android:id="@+id/iconArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/position"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="24dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/duration"
                                app:srcCompat="@drawable/time"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginRight="7dp"
                                android:adjustViewBounds="true" />

                            <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
                                android:id="@+id/durationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="24dp"
                                android:text="120 min"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorTourIcons"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/distance"
                                app:srcCompat="@drawable/route"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginRight="7dp"
                                android:adjustViewBounds="true" />

                            <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
                                android:id="@+id/distanceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="24dp"
                                android:text="200 m"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorTourIcons"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/difficulty"
                                app:srcCompat="@drawable/level"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginRight="7dp"
                                android:adjustViewBounds="true" />

                            <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
                                android:id="@+id/difficultyText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="schwer"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorTourIcons"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <hsaugsburg.zirbl001.Fonts.FlowingText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:layout_marginTop="19dp"
                            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusa."
                            android:textSize="18sp" />

                        <hsaugsburg.zirbl001.Fonts.TitleInText
                            android:id="@+id/subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:text="TextView" />

                        <hsaugsburg.zirbl001.Fonts.FlowingText
                            android:id="@+id/details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:text="Ã–ffnungszeiten:"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/continueButton"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:background="@android:color/transparent"
                            android:paddingBottom="24dp"
                            android:paddingTop="24dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/continue_button" />

                        <ImageView
                            android:id="@+id/card"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/card" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

        <!-- bottom navigation -->

        <include layout="@layout/layout_bottom_navigation_view" />


    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
