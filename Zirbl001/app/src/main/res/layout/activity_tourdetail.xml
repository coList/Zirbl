<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hsaugsburg.zirbl001.NavigationActivities.TourDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- top actionbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayoutActionBar">

            <include layout="@layout/layout_top_standard_actionbar" />

        </RelativeLayout>

        <!-- Middle section (body) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:id="@+id/relLayout1"
            android:layout_below="@+id/relLayoutActionBar"
            android:layout_marginBottom="?actionBarSize">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/position"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/code_pressed_route" />

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:background="@color/colorPrimaryDark"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iconBar"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            app:srcCompat="@drawable/code_pressed_route" />

                        <ImageButton
                            android:id="@+id/go"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_alignBottom="@+id/position"
                            android:layout_alignRight="@+id/position"
                            android:layout_marginBottom="25dp"
                            android:layout_marginRight="16dp"
                            android:background="@android:color/transparent"
                            android:onClick="startTour"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/button_go" />

                        <LinearLayout
                            android:id="@+id/iconArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/position"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="24dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/duration"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginRight="7dp"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/icon_time" />

                            <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
                                android:id="@+id/durationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="24dp"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorTurquoise"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginRight="7dp"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/icon_route" />

                            <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
                                android:id="@+id/distanceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="24dp"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorTurquoise"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_marginRight="7dp"
                                android:adjustViewBounds="true"
                                app:srcCompat="@drawable/icon_level" />

                            <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
                                android:id="@+id/difficultyText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:textAlignment="textEnd"
                                android:textColor="@color/colorTurquoise"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <hsaugsburg.zirbl001.Fonts.FlowingText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:layout_marginTop="19dp"
                            android:textSize="18sp" />

                        <hsaugsburg.zirbl001.Fonts.TitleInText
                            android:id="@+id/warningsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:text="Hinweise"
                            android:textSize="18sp" />

                        <hsaugsburg.zirbl001.Fonts.FlowingText
                            android:id="@+id/warnings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:textSize="18sp" />

                        <hsaugsburg.zirbl001.Fonts.TitleInText
                            android:id="@+id/openingHoursTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:text="Ã–ffnungszeiten"
                            android:textSize="18sp"
                            android:visibility="gone" />

                        <hsaugsburg.zirbl001.Fonts.FlowingText
                            android:id="@+id/openingHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="16dp"
                            android:text="Ã–ffnungszeiten:"
                            android:textSize="18sp"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/classButton"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:background="@android:color/transparent"
                            android:onClick="classRegistration"
                            android:paddingBottom="24dp"
                            android:paddingTop="24dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/button_class" />

                        <ImageView
                            android:id="@+id/card"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/img_card" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

        <!-- bottom navigation -->

        <include layout="@layout/layout_bottom_navigation_view" />


    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
