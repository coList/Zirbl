<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tour_selection_element"
    android:layout_width="match_parent"
    android:layout_height="187dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/code_pressed_route" />

    <hsaugsburg.zirbl001.Fonts.TourTitle
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transparent"
        android:layout_alignLeft="@+id/transparent"
        android:layout_alignStart="@+id/transparent"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="24dp"
        android:text="Test"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:textSize="26sp" />

    <LinearLayout
        android:id="@+id/iconArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transparent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/icon_time" />

        <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="24dp"
            android:text="1,5 h"
            android:textAlignment="textEnd"
            android:textColor="@color/colorTourIcons"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/icon_route" />

        <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="24dp"
            android:text="5 km"
            android:textAlignment="textEnd"
            android:textColor="@color/colorTourIcons"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/difficulty"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="7dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/icon_level" />

        <hsaugsburg.zirbl001.Fonts.InfoBesideIconsText
            android:id="@+id/difficultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="leicht"
            android:textAlignment="textEnd"
            android:textColor="@color/colorTourIcons"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>