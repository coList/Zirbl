<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/ownstatistics_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorLine"
        android:dividerHeight="2.0sp"></ListView>
    <!--
    <include
        layout="@layout/list_item_own_statistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noOwnStats"
        android:visibility="gone">

        <hsaugsburg.zirbl001.Fonts.QuicksandRegularPrimaryView
            android:id="@+id/scanText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:text="Es sind noch keine Statistiken vorhanden." />

        <ImageView
            android:id="@+id/speechbubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scanText"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/img_speech_bubble_open" />

        <ImageView
            android:id="@+id/zirblfigur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/continueArea"
            android:layout_below="@+id/scanText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/img_zirbl_small_qrcode_r"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>
</RelativeLayout>